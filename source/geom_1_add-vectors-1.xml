<diagram dimensions="(300,200)" margins="5">
    <coordinates bbox="[-1,-1,5,3]">
        <axes at="axes" hticks="(-1,1,5)" 
        vticks="(-1,1,3)" hlabels="(1,1,1)" vlabels="(1,1,1)" />
        <group at="vectors" outline="tactile">
        <vector at="vector1" v="(1,1)" stroke="black" />
        
        <vector at="vector2" v="(3,1)" stroke="black" />
        
        <vector at="vector3" v="(4,2)" stroke="black" />
        
        </group>
        <label anchor="(1,1)" alignment="north" offset="(0,3)">
            <m>\vec{x}</m>
        </label>
        <label anchor="(3, 1)" alignment="southeast" offset="(2,-1)">
            <m>\vec{y}</m>
        </label>
        <label anchor="(4,2)" alignment="northeast" offset="(2,2)" >
            <m>\vec{x}+\vec{y}</m>
        </label>
    </coordinates>

    <annotations>
    <annotation ref="figure"
                text="The two-dimensional plane with two vectors and their sum">
        <annotation ref="axes" text="The coordinate axes" />
        <annotation ref="sum-vectors" text="Two vectors and the vector that is their sum">
          <annotation ref="vector1" text="Vector x drawn pointing to the right 1 unit and up 1 unit 
          with origin at the point x=0, y=0"/>
          <annotation ref="vector2" text="Vector y drawn pointing to the right 3 units and up 1 unit 
          with origin at the point x=0, y=0"/>
          <annotation ref="vector3" text="Vector x plus vector y drawn pointing to the right 4 units and up 2 units 
          with origin at the point x=0, y=0"/>
        </annotation>
      </annotation>
  </annotations>
</diagram>
<diagram dimensions="(300,200)" margins="5">
    <coordinates bbox="[-3,-1.5,3.5,2]">
        <axes at="axes" decorations="no" />
        <group at="vectors" outline="tactile">
            <vector at="vector1" v="(1,0.5)" stroke="black" />
            <vector at="vector2" v="(-2,1)" stroke="black" />
            <vector at="vector1times3" v="(3,1.5)" stroke="black" />
            <vector at="negative2timesvector1" v="(-2,-1)" stroke="black" />
            <vector at="vector2timeshalf" v="(-1,0.5)" stroke="black" />
        </group>
        <label anchor="(1.1,0.4)" alignment="east">
            <m>\vec{x}</m>
        </label>
        <label anchor="(-2, 1.1)" alignment="north">
            <m>\vec{y}</m>
        </label>
        <label anchor="(3.0,1.4)" alignment="east" >
            <m>3\vec{x}</m>
        </label>
        <label anchor="(-1.8,-1.1)" alignment="south" >
            <m>-2\vec{x}</m>
        </label>
        <label anchor="(-1,0.6)" alignment="north" >
            <m>\frac{1}{2}\vec{y}</m>
        </label>

    </coordinates>


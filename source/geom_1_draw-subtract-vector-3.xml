<diagram dimensions="(300,200)" margins="5">
    <coordinates bbox="[-3,-1.5,3.5,2.0]">
        <axes at="axes" decorations="no" />
        <group at="vectors" outline="tactile">
            <group at="vectorx" >
                <vector at="vector1" v="(1,0.5)" stroke="black" />
                <label anchor="(1.1,0.4)" alignment="east">
                    <m>\vec{x}</m>
                </label>
            </group>
            <group at="vectory" >
                <vector at="vector2" v="(-1,1)" stroke="black" />
                <label anchor="(-1, 1.1)" alignment="north">
                    <m>\vec{y}</m>
                </label>
            </group>
            <group at="vectornegy" >
                <vector at="negvector2" v="(1,-1)" stroke="black" />
                <label anchor="(1, -1.1)" alignment="south">
                    <m>-\vec{y}</m>
                </label>
            </group>
            <group at="vectorxminusy" >
                <vector at="vector3" v="(2,-0.5)" stroke="black" dash="9 9" />
                <label anchor="(2.8, -0.3)" tactile-anchor="(2.6,-0.75)" alignment="south">
                    <m>\vec{x}-\vec{y}</m>
                </label>
            </group>
            <group at="vectorxminusytailchange" >
                <vector at="vector4" v="(2,-0.5)" tail="(-1,1)" stroke="black" dash="4 4" />
                <label anchor="(0.7, 0.65)" tactile-anchor="(1.25,0.75)" alignment="north">
                    <m>\vec{x}-\vec{y}</m>
                </label>
            </group>
        </group>
        

    </coordinates>

    <annotations>
    <annotation ref="figure"
                text="The two-dimensional plane with axes, a vector x, a vector y, and the vector x minus vector y">
        <annotation ref="axes" text="The coordinate axes" />
          <annotation ref="vectorx" text="Vector x"/>
          <annotation ref="vectory" text="Vector y"/>
          <annotation ref="vectornegy" text="Vector negative y"/>
          <annotation ref="vectorxminusy" text="Vector x minus vector y drawn with tail at the origin" />
          <annotation ref="vectorxminusytailchange" text="Vector x minus vector y drawn with tail at the head of y" />
      </annotation>
  </annotations>
</diagram>